{
  "name": "IdeaMarket on Heroku",
  "description": "Share you ideas",
  "logo": "https://raw.githubusercontent.com/xhape/static-files/master/ideamarket/images/Logo/logo-120x120.png",
  "repository": "https://github.com/xhape/ideamarket-heroku",
  "success_url": "/ghost",
  "addons": [
    "heroku-postgresql",
    "logentries"
  ],
  "env": {
    "HEROKU_URL": {
      "description": "The URL of this Heroku app.",
      "value": "https://YOURAPPNAME.herokuapp.com"
    },
    "EMAIL_SERVICE": {
      "description": "The name of the email service gmail etc",
      "required": false
    },
    "EMAIL_LOGIN": {
      "description": "The email username",
      "required": false
    },
    "EMAIL_PASSWORD": {
      "description": "The email password",
      "required": false
    },
    "PGSSLMODE": {
      "description": "PostgreSQL SSL connection mode. Set to 'require' to force SSL. Unset it to use the default.",
      "required": false,
      "value": "require"
    }
  }
}
